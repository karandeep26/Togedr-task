<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Id"/>

            <TextView
                android:id="@+id/id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/id"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id"
                android:layout_margin="3dp"
                android:text="Name"/>

            <TextView
                android:id="@+id/name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/id_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/email"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_margin="3dp"
                android:text="Email"/>

            <TextView
                android:id="@+id/email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/name_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@id/email"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_margin="3dp"
                android:text="Mobile"/>

            <TextView
                android:id="@+id/mobile_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_value"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/mobile"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/office"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_margin="3dp"
                android:text="Office"/>

            <TextView
                android:id="@+id/office_value"
                android:layout_width="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/office"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/office"
                android:layout_margin="3dp"
                android:text="Home"/>

            <TextView
                android:id="@+id/home_value"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/office_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@id/home"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home"
                android:layout_margin="3dp"
                android:text="Address"/>

            <TextView
                android:id="@+id/address_value"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/home_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/address"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gender"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_margin="3dp"
                android:text="Gender"/>

            <TextView
                android:id="@+id/gender_value"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_below="@+id/address_value"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/gender"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textStyle="bold"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>